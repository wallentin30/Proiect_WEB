@page
@model Proiect_WEB.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Adauga angajat nou.</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].DataAngajarii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Departament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Salariu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Oras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Status)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAngajarii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departament.NumeDepartament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salariu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusAngajat)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
